{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color":{
            "defaultPalette": false,
            "palette": [
                { "slug": "n-white", "color": "rgb(255,255,255)", "name": "ninja white" },
                { "slug": "n-gray-100", "color": "rgb(243 244 246)", "name": "Ninja Gray 100" },
                { "slug": "n-gray-200", "color": "rgb(229 231 235)", "name": "Ninja Gray 200" },
                { "slug": "n-gray-300", "color": "rgb(209 213 219)", "name": "Ninja Gray 300" },
                { "slug": "n-gray-400", "color": "rgb(156 163 175)", "name": "Ninja Gray 400" },
                { "slug": "n-gray-500", "color": "rgb(107 114 128)", "name": "Ninja Gray 500" },
                { "slug": "n-gray-600", "color": "rgb(75 85 99)", "name": "Ninja Gray 600" },
                { "slug": "n-gray-700", "color": "rgb(55 65 81)", "name": "Ninja Gray 700" },
                { "slug": "n-gray-800", "color": "rgb(31 41 55)", "name": "Ninja Gray 800" },
                { "slug": "n-gray-900", "color": "rgb(17 24 39)", "name": "Ninja Gray 900" },
                { "slug": "n-primary", "color": "rgb(239 68 68)", "name": "Ninja Primary" },
                { "slug": "n-accent", "color": "rgb(67 56 202)", "name": "Ninja Accent" },
                { "slug": "n-success", "color": "rgb(52 211 153)", "name": "Ninja Success" },
                { "slug": "n-info", "color": "rgb(96 165 250)", "name": "Ninja Info" },
                { "slug": "n-warning", "color": "rgb(251 146 60)", "name": "Ninja Warning" },
                { "slug": "n-danger", "color": "rgb(236 72 153)", "name": "Ninja Danger" },
                {"slug": "n-torquise", "color": "rgb(125, 249, 255)", "name": "Ninja Torquise"}
            ],
            "background": true,
            "text": true,
            "link": false,
            "custom": true,
            "duotone": [ 
                { "slug": "n-pink", "colors": ["#11245e", "#dc4379"], "name": "Ninja pink sunset"}
            ],
            "defaultGradients": false,
            "gradients": [
                {
                    "slug": "n-summer-dog",
                    "gradient": "linear-gradient(#a8ff78, #78ffd6)",
                    "name": "Ninja summer dog"
                }
            ]
        },
        "blocks": {
            "core/site-title": {
                "color":{
                    "defaultPalette": true,
                    "palette": [
                        { "slug": "n-primary", "color": "#38ff46", "name": "Ninja Primary" }
                    ],
                    "link": true,
                    "custom": false,
                    "duotone": [],
                    "customDuotone": false,
                    "gradients": [
                        {
                            "slug": "n-sexy-blue",
                            "gradient": "linear-gradient(#2193b0, #6dd5ed)",
                            "name": "Ninja Sexy blue"
                        }
                    ],
                    "customGradient": false
                    
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "pacifico, sans-serif",
                            "name": "Ninja pacifico",
                            "slug": "n-pacifico"
                        }
                    ]
                }
                

            },
            "core/preformatted": {
                "typography": {
                   "fontSizes": [],
                   "customFontSize": false
                }
            }
        },
        "border": {
            "style": true,
            "color":true,
            "radius": true,
            "width":true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "rubik, sans-serif",
                    "name": "Ninja Rubik",
                    "slug": "n-rubik"
                }
            ],
            "fontSizes": [
                {"slug": "small", "name": "small", "size": "0.75rem"},
                {"slug": "medium", "name": "medium", "size": "1.25rem"},
                {"slug": "large", "name": "large", "size": "2.25rem"},
                {"slug": "x-large", "name": "x-large", "size": "3rem"},
                {"slug": "gigantic", "name": "gigantic", "size": "3.75rem"}
            ],
            "dropCap":  true,
            "fontWeight": true,
            "lineHeight": true,
            "letterSpacing": true,
            "textDecoration": true,
            "fontStyle": true,
            "textTransform": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
            
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--n-gray-700)",
            "background": "var(--wp--preset--color--n-white)"
        },
        "elements": {
            "link": {
                "color": {
                   "text": "var(--wp--preset--color--n-primary)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--n-summer-dog)"
                }
            },
            "core/pullquote": {
                "border": {
                    "color": "var(--wp--preset--color--n-torquise)",
                    "style": "solid",
                    "radius": "10px",
                    "width": "5px"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font--family--n-pacifico"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font--family--n-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "blockGap": "4em"
          
        }
        
        
    }
}